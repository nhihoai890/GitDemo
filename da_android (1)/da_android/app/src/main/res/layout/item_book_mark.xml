<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bogoc4"
    android:id="@+id/id_item_book_mark"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/id_img_book_book_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/so_do" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_btn_clone_book_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/image_8" />

        <TextView
            android:id="@+id/id_txt_name_book_book_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Số Đỏ"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/id_txt_author_book_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Số Đỏ"
            android:textColor="#FF0000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/id_txt_name_start_book_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Số Đỏ"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/id_txt_name_price_book_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Số Đỏ"
            android:textColor="#607F9D"
            android:textSize="24dp" />
    </LinearLayout>
</LinearLayout>