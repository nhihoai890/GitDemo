<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.GradeFragment">

    <!-- TODO: Update blank fragment layout -->
    <?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tiêu đề -->
            <TextView
                android:id="@+id/tvScoresTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Điểm Số"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="16dp"/>

            <!-- GPA Tổng Quát -->
            <TextView
                android:id="@+id/tvGpaTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Điểm Trung Bình Chung (GPA)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/tvGpa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GPA: 3.8"
                android:background="@android:color/darker_gray"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Bảng điểm theo học kỳ -->
            <TextView
                android:id="@+id/tvSemesterTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bảng Điểm Học Kỳ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

            <!-- Bảng điểm chi tiết -->
            <TableLayout
                android:id="@+id/tableScores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <!-- Dòng tiêu đề -->
                <TableRow>
                    <TextView
                        android:text="Môn Học"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:background="@android:color/darker_gray"/>

                    <TextView
                        android:text="Điểm"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:background="@android:color/darker_gray"/>
                </TableRow>

                <!-- Dòng dữ liệu môn 1 -->
                <TableRow>
                    <TextView
                        android:text="Toán"
                        android:padding="8dp"/>

                    <TextView
                        android:text="9.5"
                        android:padding="8dp"/>
                </TableRow>

                <!-- Dòng dữ liệu môn 2 -->
                <TableRow>
                    <TextView
                        android:text="Lý"
                        android:padding="8dp"/>

                    <TextView
                        android:text="8.7"
                        android:padding="8dp"/>
                </TableRow>

                <!-- Dòng dữ liệu môn 3 -->
                <TableRow>
                    <TextView
                        android:text="Hóa"
                        android:padding="8dp"/>

                    <TextView
                        android:text="8.9"
                        android:padding="8dp"/>
                </TableRow>

            </TableLayout>

            <!-- Lịch sử kỳ thi -->
            <TextView
                android:id="@+id/tvExamHistoryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lịch Sử Các Kỳ Thi"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/examHistory1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kỳ Thi Toán - 20/09/2024: 9.5"
                android:padding="8dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/examHistory2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kỳ Thi Lý - 18/09/2024: 8.7"
                android:padding="8dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>
    </ScrollView>


</FrameLayout>